.github/workflows/stock-line-notify.yml
name: Daily Stock Report to LINE

on:
  schedule:
    - cron: '10 8 * * 1-5'  # 台灣時間下午 4:10（UTC+8 = UTC 08:10）
  workflow_dispatch:

jobs:
  send:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'

      - name: Install dependencies
        run: pip install requests yfinance

      - name: Run script
        run: python stock_notify.py
        env:
          LINE_NOTIFY_TOKEN: ${{ secrets.LINE_NOTIFY_TOKEN }}
